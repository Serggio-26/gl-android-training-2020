<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ToggleButton
        android:id="@+id/led1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:text="LED 1"
        android:textOff="LED 1"
        android:textOn="LED 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/led2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:text="LED 2"
        android:textOff="LED 2"
        android:textOn="LED 2"
        app:layout_constraintStart_toEndOf="@+id/led1Button"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/led3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:text="LED 3"
        android:textOff="LED 3"
        android:textOn="LED 3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/led1Button" />

    <ToggleButton
        android:id="@+id/led4Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:text="LED 4"
        android:textOff="LED 4"
        android:textOn="LED 4"
        app:layout_constraintStart_toEndOf="@+id/led3Button"
        app:layout_constraintTop_toBottomOf="@+id/led2Button" />
</android.support.constraint.ConstraintLayout>